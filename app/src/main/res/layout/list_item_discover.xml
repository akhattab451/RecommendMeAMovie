<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/discover_poster_width"
    android:layout_height="@dimen/discover_item_height"
    android:layout_marginEnd="@dimen/half_spacing"
    app:cardCornerRadius="@dimen/round_edges_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="@dimen/discover_poster_width"
            android:layout_height="@dimen/discover_poster_height"
            android:elevation="@dimen/unit_dimen"
            android:contentDescription="@string/movie_list_item_description"
            android:scaleType="fitCenter"
            app:strokeWidth="@dimen/unit_dimen"
            app:strokeColor="@color/semi_transparent_grey"
            tools:src="@drawable/ic_broken_image" />

        <TextView
            android:id="@+id/title"
            tools:text="Cruella"
            android:gravity="center"
            android:paddingTop="@dimen/half_spacing"
            android:paddingHorizontal="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="?colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/year"
            tools:text="2021"
            android:gravity="center"
            android:paddingBottom="@dimen/half_spacing"
            android:background="?colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
