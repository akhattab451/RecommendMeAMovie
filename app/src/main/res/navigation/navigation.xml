<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.recommendmeamovie.ui.main.MainFragment"
        android:label="Discover"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_recommendFragment"
            app:destination="@id/recommendFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/recommendFragment"
        android:name="com.example.recommendmeamovie.ui.recommend.RecommendFragment"
        android:label="@string/app_name"
        tools:layout="@layout/recommend_fragment">
        <action
            android:id="@+id/action_recommendFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.recommendmeamovie.ui.movie.MovieFragment"
        tools:layout="@layout/movie_fragment">
        <argument
            android:name="movieId"
            app:argType="long" />
        <argument
            android:name="movieName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.recommendmeamovie.ui.movielist.MovieListFragment"
        android:label="@string/search"
        tools:layout="@layout/movie_list_fragment">
        <action
            android:id="@+id/action_movieListFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_movieListFragment"
        app:destination="@id/movieListFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="false" />
</navigation>