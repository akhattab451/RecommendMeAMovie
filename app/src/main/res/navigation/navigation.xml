<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.recommendmeamovie.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_recommendFragment"
            app:destination="@id/recommendFragment" />
        <action
            android:id="@+id/action_mainFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendFragment"
        android:name="com.example.recommendmeamovie.ui.recommend.RecommendFragment"
        android:label="@string/app_name"
        tools:layout="@layout/recommend_fragment">
        <action
            android:id="@+id/action_recommendFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_recommendFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.recommendmeamovie.ui.movie.MovieFragment"
        tools:layout="@layout/movie_fragment">
        <action
            android:id="@+id/action_movieFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment" />
        <argument
            android:name="movieId"
            app:argType="long" />
        <argument
            android:name="movieName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.recommendmeamovie.ui.movielist.MovieListFragment"
        android:label="List"
        tools:layout="@layout/movie_list_fragment" >
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_movieListFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_movieListFragment"
        app:destination="@id/movieListFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="false" />
</navigation>